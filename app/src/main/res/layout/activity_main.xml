<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFDBC1"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="337dp"
        android:layout_height="52dp"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="226dp"
        style="@style/TextStyle1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/text_welcome"
        android:contentDescription="@string/text_welcome"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="303dp"
        android:layout_height="32dp"
        android:layout_marginHorizontal="95dp"
        android:layout_marginTop="10dp"
        android:text="@string/text_howru"
        style="@style/TextStyle1.style2"
        android:layout_marginStart="85dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:contentDescription="@string/text_howru"/>

    <ImageView
        android:layout_width="222.55dp"
        android:layout_height="200dp"
        android:background="@drawable/icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginStart="104dp"
        android:layout_marginTop="46dp"
        android:contentDescription="@string/image_icon"/>

    <ImageView
        android:layout_width="222.55dp"
        android:layout_height="200dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="320dp"
        android:background="@drawable/icon"
        android:contentDescription="@string/image_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


</androidx.constraintlayout.widget.ConstraintLayout>
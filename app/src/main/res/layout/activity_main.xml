<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EED8B3"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="83dp"
        android:background="#812F3A"
        android:padding="25dp"
        android:text="@string/txt_travels"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="80dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/textView">

        <android.widget.Button
            android:id="@+id/button"
            android:layout_width="122dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_border_stroke"
            android:text="Мои путешествия"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <android.widget.Button
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_border_stroke"
            android:text="Популярные места"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_border_stroke"
            android:text="Редкие места"
            android:textAllCaps="false"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout">
        <android.widget.Button
            android:layout_width="190dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_border_stroke"
            android:text="Мои запланированные путешествия"
            android:textAllCaps="false"
            android:textSize="14sp">
        </android.widget.Button>
        <android.widget.Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_border_stroke"
            android:text="Архив путешествий"
            android:textAllCaps="false"
            android:textSize="14sp">
        </android.widget.Button>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>